<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue chez District{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}
        {% endblock %}

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    

     <nav class="navbar navbar-expand-lg navbar-light bg-district districtColor">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img src="{{ asset('assets/images_the_district/the_district_brand/logo.png') }}" alt="The District" id="logo_nav"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ path('app_catalogue') }}">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_catalogue_cats') }}">Catégories</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_catalogue_plats') }}">Tous les plats</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
        </li>
        {# {% if isGranted('ROLE_ADMIN') %} #}
        <li class="nav-item">
          <a class="nav-link" href="/api">Admin</a>
        </li>
        {# {% endif %} #}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_panier') }}">Panier {% if app.session.get("panier") | length > 0 %}(<span class="text-primary">{{app.session.get("panier") | length}}</span>){% endif %}</a>
        </li>
      </ul>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% if app.user %}
          <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
        </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>
        {% block body %}{% endblock %}

        {% block footer %}
        <footer>
          <div class="footer text-center">
            Logos des réseaux sociaux
          </div>
        </footer>
        {% endblock %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

    </body>
</html>
