{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez District{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Nos plats</h1>
</div>
<div class="container">
         <div class="row mt-5">
    {% for plat in plats %}
                <div class="col-4 text-center my-2 bg_fond">
                    <img src="{{ asset('assets/images_the_district/food/')}}{{plat.image}}" alt="{{ plat.libelle }}" class="rounded-3 img_plat">
                </div>
                <div class="col-6 text-center my-2 bg_fond districtColor">
                    {{plat.description}}
                    <p><button class="text-center btn btn-outline-district btn-cat btn-lg my-1" type="submit" name="plat" value="{{ plat.id }}">Commander</button></p>
                </div>
                <div class="col-2 text-center my-2 bg_fond districtColor justify-content-bottom">
                    {{plat.prix}}&nbsp;&euro;
                </div>
                
            
        
    {% endfor %}
    </div>
    </div>
{% endblock %}
