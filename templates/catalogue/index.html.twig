{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez District{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les Catégories les plus populaires</h1>

    {# This friendly message is coming from: ✅
       Hello {{ controller_name }}!
    <ul>
        <li>Your controller at <code><a href="{{ '/home/christopheg/Public/WebDistrict/src/Controller/CatalogueController.php'|file_link(0) }}">src/Controller/CatalogueController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/home/christopheg/Public/WebDistrict/templates/catalogue/index.html.twig'|file_link(0) }}">templates/catalogue/index.html.twig</a></code></li>
    </ul> #}
</div>
    <div class="container">
         <div class="row mt-5">
            {% for categorie in categories %}
                <div class="col-12 col-lg-6 col-xl-4 mx-auto text-center my-2">
                <div class="text-center col-12">
                    <img src="{{ asset('assets/images_the_district/category/')}}{{categorie.image}}" alt="{{ categorie.libelle }}" class="rounded-3 img_cat">
                </div>
                <div class="text-center col-12">
                    <button class="btn btn-outline-district btn-cat btn-lg my-1" type="submit" name="catego" value="{{ categorie.id }}">{{ categorie.libelle }}</button>
                </div>
                </div>
            {% endfor %}
        </div>
    </div>

         <div class="example-wrapper col-12">
         <h1>Les plats au top des ventes</h1>
         </div>
    <div class="container">
         <div class="row mt-5">
            {% for plat in plats %}
             {# <div class="col-12 col-lg-6 col-xl-4 mx-auto text-center my-2">   #}
                 <div class="col-4 text-center my-2 bg_fond">
                    <img src="{{ asset('assets/images_the_district/food/')}}{{plat.image}}" alt="{{ plat.libelle }}" class="rounded-3 img_plat">
                </div>
                <div class="col-6 text-center my-2 bg_fond districtColor">
                    {{plat.description}}
                    <p><button class="text-center btn btn-outline-district btn-cat btn-lg my-1" type="submit" name="plat" value="{{ plat.id }}">Commander</button></p>
                </div>
                
                <div class="col-2 text-center my-2 bg_fond districtColor justify-content-bottom">
                    {{plat.prix}}&nbsp;&euro;
                </div>
            {# </div>     #}
            {% endfor %}
        </div>
    </div>
{% endblock %}
