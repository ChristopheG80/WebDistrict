{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez District{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{# Boucle pour affichage des images et textes #}
<div class="example-wrapper">
    {% for cat in cats %}
    <h1>La cat√©gorie {{ cat.libelle }}</h1>
    {% endfor %}
</div>
<div class="container">
         <div class="row mt-5">
            {% for plat in plats %}
             {# <div class="col-12 col-lg-6 col-xl-4 mx-auto text-center my-2">   #}
                 <div class="col-4 text-center my-2 bg_fond">
                    <img src="{{ asset('assets/images_the_district/food/')}}{{plat.image}}" alt="{{ plat.libelle }}" class="rounded-3 img_plat">
                </div>
                <div class="col-6 text-center my-2 bg_fond districtColor">
                    {{plat.description}}
                    <p><a href="/panier/ajout/{{plat.id}}" class="text-center my-1" name="plat">
                    
                    <img src="{{ asset('assets/images_the_district/panier_logo_ajout.png')}}" class="rounded-3">
                    
                    </a></p>
                </div>
                
                <div class="col-2 text-center my-2 bg_fond districtColor justify-content-bottom">
                    {{plat.prix}}&nbsp;&euro;
                </div>
            {# </div>     #}
            {% endfor %}
        </div>
    </div>
{% endblock %}
