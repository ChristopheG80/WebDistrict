{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
<div class="row">
{{ form_start(form) }}
    <div class="my-custom-class-for-errors col-12">
        {{ form_errors(form) }}
    </div>
        
                <div class="col-3 input-group-label d-flex">
                    {{ form_label(form.nom) }}
                    </div>
                    <div class="col-3 mb-2">
                    {{ form_widget(form.nom, {'attr': {'class': 'btn-outline-district'} }) }}
                    {{ form_errors(form.nom, {'attr': {'class': 'text-warning'} }) }}
                </div>


                <div class="col-3 mb-2">
                    {{ form_label(form.prenom) }}
