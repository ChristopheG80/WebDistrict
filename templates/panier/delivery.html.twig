                <div class="col-3 mb-2">
                    {{ form_label(form.email) }}
                    </div>
                    <div class="col-3 mb-2">
                    {{ form_widget(form.email, {'attr': {'class': 'btn-outline-district'} }) }}
                    {{ form_errors(form.email, {'attr': {'class': 'text-warning'} }) }}
                </div>
                <div class="col-3 mb-2">
                    {{ form_label(form.telephone) }}
                    </div>
