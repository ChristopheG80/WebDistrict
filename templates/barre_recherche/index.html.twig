{% extends 'base.html.twig' %}

{% block title %}Hello BarreRechercheController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Résultats pour les catégories</h1>
</div>
    <div class="container">
         <div class="row mt-5">
            {% for categorie in categories %}
                <div class="col-12 col-lg-6 col-xl-4 mx-auto text-center my-2">
                <div class="text-center col-12">
                    <img src="{{ asset('assets/images_the_district/category/')}}{{categorie.image}}" alt="{{ categorie.libelle }}" title="{{ categorie.libelle }}" class="rounded-3 img_cat">
                </div>
                <div class="text-center col-12">
                    <a class="btn btn-outline-district btn-cat btn-lg my-1" type="submit" name="catego" href="/plats/{{ categorie.id }}">{{ categorie.libelle }}</a>
                </div>
                </div>
            {% endfor %}
            {% if categories | length == 0 %}
            <div class="text-center col-12">
            Pas de correspondance dans les Catégories <a class="btn btn-outline-district" href="{{ path('app_catalogue_cats') }}">Toutes les Catégories</a>
            </div>
            {% endif %}
        </div>
    </div>

         <div class="example-wrapper col-12">
         <h1>Résultats pour les plats</h1>
         </div>
    <div class="container">
         <div class="row mt-5">
            {% for plat in plats %}
             {# <div class="col-12 col-lg-6 col-xl-4 mx-auto text-center my-2">   #}
                 <div class="col-4 text-center my-2 bg_fond">
                    <img src="{{ asset('assets/images_the_district/food/')}}{{plat.image}}" alt="{{ plat.libelle }}" title="{{ plat.description }}" class="rounded-3 img_plat">
                </div>
                <div class="col-6 text-center my-2 bg_fond districtColor">
                    {{plat.description}}
                    <p><a href="/panier/ajout/{{plat.id}}" class="text-center my-1" name="plat" >
                    <img src="{{ asset('assets/images_the_district/panier_logo_ajout.png')}}" class="rounded-3">
                    </a>
                    </p>
                </div>
                
                <div class="col-2 text-center my-2 bg_fond districtColor justify-content-bottom">
                    {{plat.prix}}&nbsp;&euro;
                </div>
            {# </div>     #}
            {% endfor %}
            {% if plats | length == 0 %}
            <div class="text-center col-12">
            Pas de correspondance dans les Plats <a class="btn btn-outline-district" href="{{ path('app_catalogue_plats') }}">Tous les plats</a>
            </div>
            {% endif %}

        </div>
    </div>

{% endblock %}
